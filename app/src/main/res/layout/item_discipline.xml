<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d8"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name"
        android:textAppearance="@style/Text.Small.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Информационная безопасность" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_group"
        android:textAppearance="@style/Text.Small.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11-501 - 11-508, 15-603 - 15-605, 8-305" />

</LinearLayout>