<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorMain</item>
        <item name="android:textColorTertiary">@color/colorTertiary</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorHighlight">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorScreenBackground</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_round_blue</item>
        <item name="android:textColor">@color/colorScreenBackground</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Small text appearances -->

    <style name="Text.Small">
        <item name="android:textSize">@dimen/d14</item>
    </style>

    <style name="Text.Small.Title">
        <item name="android:textColor">@color/colorMain</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Small.Secondary">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Text.Small.Primary">
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <style name="Text.Small.Inverse">
        <item name="android:textColor">@color/colorInverse</item>
    </style>

    <!-- Medium text appearances -->

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/d16</item>
    </style>

    <style name="Text.Medium.Inverse">
        <item name="android:textColor">@color/colorInverse</item>
    </style>

    <style name="Text.Medium.Secondary">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Text.Medium.Primary">
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <!-- Large text appearances -->

    <style name="Text.Large">
        <item name="android:textSize">@dimen/d20</item>
    </style>

    <style name="Text.Large.Primary">
        <item name="android:color">@color/colorMain</item>
    </style>

    <style name="Text.Large.Inverse">
        <item name="android:textColor">@color/colorInverse</item>
    </style>

    <style name="Text.Large.Title">
        <item name="android:textColor">@color/colorMain</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.ToolbarText">
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textSize">@dimen/d16</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Text.ToolbarText</item>
        <item name="android:background">@color/colorToolbarBackground</item>
    </style>


</resources>
